{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd client && rm -rf node_modules package-lock.json && npm install --platform=linux --arch=x64 && npm install @esbuild/linux-x64@0.19.8 && npm run build",
        "outputDirectory": "dist",
        "installCommand": "npm install --platform=linux --arch=x64"
      }
    },
    {
      "src": "server/api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/api/index.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 